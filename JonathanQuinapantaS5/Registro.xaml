<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JonathanQuinapantaS5.Registro"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Registro de estudiante" HorizontalTextAlignment="Center" FontSize="20"/>
            <Entry x:Name="txtCodigo" Placeholder="ingerese el codigo" Keyboard="Numeric"/>
            <Entry x:Name="txtNombre" Placeholder="ingerese el nombre" />
            <Entry x:Name="txtApellido" Placeholder="ingerese el apellido"/>
            <Entry x:Name="txtEdad" Placeholder="ingerese la edad" Keyboard="Numeric"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnInsertar" Text="INSERTAR" Clicked="btnInsertar_Clicked" Grid.Column="0"/>
                <Button x:Name="btnRegresar" Text="REGRESAR" Clicked="btnRegresar_Clicked" Grid.Column="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>